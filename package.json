{
  "name": "@t8ngs/show-screen-errors",
  "version": "1.0.1",
  "description": "Error printer to pretty print T8ngs errors",
  "type": "module",
  "files": [
    "dist",
    "!dist/examples"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "c8 npm run quick:test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "precompile": "npm run lint && npm run clean",
    "compile": "tsup-node && tsc --emitDeclarationOnly --declaration",
    "build": "npm run compile",
    "version": "npm run build",
    "prepublishOnly": "npm run build",
    "clean": "del dist",
    "quick:test": "glob -c \"node --import=ts-node-maintained/register/esm --enable-source-maps --test-reporter=spec --test\" \"tests/*.spec.ts\"",
    "prepare": "husky",
    "commit": "cz",
    "commitlint": "commitlint --edit"
  },
  "devDependencies": {
    "@arapucajs/eslint-config": "^1.1.2",
    "@arapucajs/prettier": "^1.1.1",
    "@arapucajs/tsconfig": "^1.0.0",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@swc/core": "^1.13.19",
    "@types/chai": "^5.2.2",
    "@types/ms": "^2.1.0",
    "@types/node": "^24.5.2",
    "c8": "^10.1.3",
    "chai": "^6.0.1",
    "commitizen": "^4.3.1",
    "cross-env": "^10.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^7.0.0",
    "eslint": "^9.36.0",
    "expect": "^30.2.0",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "ts-node-maintained": "^10.9.6",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "homepage": "https://github.com/t8ngs/show-screen-errors#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t8ngs/show-screen-errors.git"
  },
  "bugs": {
    "url": "https://github.com/t8ngs/show-screen-errors/issues"
  },
  "keywords": [
    "errors",
    "pretty",
    "cli",
    "console",
    "t8ngs",
    "test",
    "printer"
  ],
  "author": "JefteCosta <jefteamorim@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "tsup": {
    "entry": [
      "./index.ts"
    ],
    "outDir": "./dist",
    "clean": true,
    "format": "esm",
    "dts": false,
    "sourcemap": false,
    "target": "esnext"
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "prettier": "@arapucajs/prettier",
  "dependencies": {
    "@poppinss/colors": "^4.1.5",
    "jest-diff": "^30.2.0",
    "supports-color": "^10.2.2",
    "youch": "^4.1.0-beta.11"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
